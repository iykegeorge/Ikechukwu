@model IEnumerable<IGUPatients.Models.MedicationType>

@{
    ViewData["Title"] = "List of Medication Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>List of Medication Types</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="IGUMedication" asp-action="Index" asp-route-id="@item.MedicationTypeId" asp-route-name="@item.Name"> @Html.DisplayFor(modelItem=>item.Name)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicationTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicationTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicationTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
